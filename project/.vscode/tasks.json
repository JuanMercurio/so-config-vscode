{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Valgrind Project",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "tp"
            },
            "command": "make clean && make memcheck",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Helgrind Project",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "tp"
            },
            "command": "make clean && make helgrind",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run Project",
            "type": "shell",
            "command": "make clean && make all && make run",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "tp"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": ["relative"]
            },
        },
        {
            "label": "Build Project",
            "type": "shell",
            "command": "make clean && make all",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true,
                "group": "build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Test Project",
            "type": "shell",
            "command": "make all && make test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true,
                "group": "tp"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}