{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Utils",
            "type": "shell",
            "command": "make clean && make all",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": "cd .. && make all",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation" : ["absolute", "${WorkspaceFolder}/utils/src"]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean All",
            "type": "shell",
            "command": "cd .. && make clean",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
       
    ]
}